{
  "compilerOptions": {
    "strict": false,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "vite/client",
      "@types/node",
      "cypress"
    ]
  },
  "include": [
    "src/**/*",
    "cypress/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
  ],
  "plugins": [{"name": "typescript-eslint-language-service"}],
}
